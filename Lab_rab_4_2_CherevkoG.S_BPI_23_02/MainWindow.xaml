<Window x:Class="Lab_rab_4_2_CherevkoG.S_BPI_23_02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление персоналом" Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        Style="{DynamicResource CustomWindowStyle}">
    <Window.Resources>
        <RoutedUICommand x:Key="OpenEmployeeCommand" Text="Сотрудники"/>
        <RoutedUICommand x:Key="OpenRoleCommand" Text="Должности"/>
    </Window.Resources>

    <Window.CommandBindings>
        <CommandBinding Command="{StaticResource OpenEmployeeCommand}" Executed="OpenEmployee_Executed"/>
        <CommandBinding Command="{StaticResource OpenRoleCommand}" Executed="OpenRole_Executed"/>
    </Window.CommandBindings>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Данные">
                <MenuItem Header="Должности" Command="{Binding OpenRoleCommand}"/>
                <MenuItem Header="Сотрудники" Command="{Binding OpenEmployeeCommand}"/>
                <Separator/>
                <MenuItem Header="Выход" Command="{Binding ExitCommand}"/>
            </MenuItem>
            <MenuItem Header="Темы">
                    <MenuItem Header="Доступные темы" IsEnabled="False"/>
                <MenuItem Header="Светлая" Command="{Binding ChangeThemeCommand}" Uid="0"/>
                <MenuItem Header="Темная" Command="{Binding ChangeThemeCommand}" Uid="1"/>
                </MenuItem>
            </Menu>

        <Grid>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" 
                       TextWrapping="Wrap" TextAlignment="Center">
                Лабораторная работа 4.2
                <LineBreak/>
                Выполнил Черевко Григорий
                <LineBreak/>
                Группа БПИ-23-02
                <LineBreak/>
                Разработка приложений по технологии MVVM
            </TextBlock>
        </Grid>
    </DockPanel>
</Window>