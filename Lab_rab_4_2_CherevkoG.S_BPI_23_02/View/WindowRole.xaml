<Window x:Class="Lab_rab_4_2_CherevkoG.S_BPI_23_02.View.WindowRole"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_rab_4_2_CherevkoG.S_BPI_23_02.View"
        mc:Ignorable="d"
        Title="Должности" Height="450" Width="600"
        Style="{DynamicResource CustomWindowStyle}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Content="Добавить" Height="25" Margin="10,10,5,10"
                    Command="{Binding AddRole}"/>
            <Button Content="Редактировать" Height="25" Margin="10,10,5,10"
                    Command="{Binding EditRole}"/>
            <Button Content="Удалить" Height="25" Margin="10,10,5,10"
                    Command="{Binding DeleteRole}"/>
        </StackPanel>

        <ListView Grid.Row="1" ItemsSource="{Binding ListRole}"
                  SelectedItem="{Binding SelectedRole}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Код" Width="50" DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="Наименование должности" DisplayMemberBinding="{Binding NameRole}" Width="200"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>